{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"declaration": true,
		"emitDeclarationOnly": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["../*"]
		}
	},
	"include": ["./src/**/*.ts"]
}
